<button ...attributes class="material-icons text-center h-full" data-test-pop-up-menu="icon" type="button"
    {{on "click" (stop-propagation this.toggleMenu)}}>
    more_vert
</button>


{{#if this.isOpened}}
<div data-test-pop-up-menu="background"
    class="fixed top-0 left-0 w-full h-full bg-black bg-opacity-50 z-10 cursor-pointer" {{on "click" this.toggleMenu}}>
    <div data-test-pop-up-menu="menu"
        class="container mt-32 pb-2 rounded-lg text-center mx-auto cursor-default w-3/5 sm:w-2/5 md:w-2/6 xl:w-1/5 bg-green-500">
        <h2 class="text-xl pt-1 pb-2 text-gray-900">{{@label}}</h2>
        {{yield}}
    </div>
</div>
{{/if}}