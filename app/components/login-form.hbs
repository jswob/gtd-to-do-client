<XForm @title="Zaloguj się">
  <XForm::Input
    data-test-reg-form-input="email"
    @label="Email"
    @property="email"
    @changeset={{@changeset}}
  />
  <XForm::Input
    data-test-reg-form-input="password"
    type="password"
    @label="Hasło"
    @property="password"
    @changeset={{@changeset}}
  />

  <XForm::Button
    data-test-reg-form-button="submit"
    @text="Zaloguj"
    @action={{fn this.login @changeset}}
  />

  <XForm::Redirection
    data-test-reg-form-redirection
    @infoText="Jeżeli nie posiadasz konta"
    @linkText="Zarejestruj się"
    @route="sign-up"
  />
</XForm>