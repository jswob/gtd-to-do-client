<div ...attributes
    class="relative block w-5/6 mx-auto mb-2 py-2 text-md text-gray-900 bg-green-500 text-center rounded-lg">
    <LinkTo data-test-collection-container="link" @route="user.collections.collection" @model={{@collection}}>
        {{@collection.title}}</LinkTo>
    <PopUpMenu data-test-collection-container="menu-button" @buttonText="more_vert"
        class="material-icons absolute top-0 right-0 h-full p-2" @menuClasses="bg-green-500">
        <h2 class="text-xl pt-1 pb-2 text-gray-900">{{@collection.title}}</h2>
        <PopUpMenu::Button data-test-collection-container="link-edit" @route="user.collections.collection.edit"
            @model={{@collection}}>Edytuj</PopUpMenu::Button>
        <PopUpMenu::Button data-test-collection-container="link-delete" @route="user.collections.collection.delete"
            @model={{@collection}}>Usu≈Ñ</PopUpMenu::Button>
    </PopUpMenu>
</div>