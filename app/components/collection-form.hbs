<XForm data-test-form class="pt-10 mx-4">
    <XForm::Input data-test-collection-form-input
        class="my-8 w-5/6 px-4 py-2 text-xl font-semibold border-4 bg-gray-200 text-black outline-none" @color="black"
        @errorColor="red-600 " @errorLabelClasses="text-red-600 font-bold text-xl" @label="np. Najbliższe działania"
        @placeholderColor="gray-700" @property="title" @changeset={{@changeset}} />

    {{#if @buckets.length}}
    <div class="text-center">
        {{#each @buckets as |bucket|}}
        <XForm::Radio data-test-collection-form-bucket
            class="text-2xl w-5/6 rounded-full outline-none bg-gray-200 border-4 mb-4 border-black"
            @activeClass="text-white bg-gray-900 border-gray-700" @label={{bucket.title}} @property="bucket"
            @changeset={{@changeset}} @value={{bucket}} @activeValue={{this.activeBucket}} />
        {{/each}}
    </div>
    {{/if}}

    <div class="text-center">
        <XForm::Button data-test-collection-form-submit
            class="w-5/6 mx-auto mt-6 py-4 text-2xl bg-gray-900 text-white font-semibold"
            @action={{fn this.manipulateCollection @changeset}}>{{@buttonLabel}}</XForm::Button>
    </div>
</XForm>